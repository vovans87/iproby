@model iproby.Models.announ_details

<div class="row" style="width:1100px;background-color:white; margin:0 auto;">
    <div style="width: 800px; margin: 0 auto;">
        <form role="form" action="/Cabinet/SaveDetails" method="post" data-toggle="validator" data-disable=false data-delay=100>
            <div class="modal-header">

                <h4 class="modal-title">Редактирование личных данных</h4>
            </div>
            <div class="modal-body" id="result">
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-8">


                        <div class="form-group has-feedback">
                            <label for="inputLogin" class="control-label add_asterisk">Логин</label>
                            <input type="text" class="form-control" id="inputLogin" placeholder="Login" value="@Model.login" name="login" data-remote="/Status/CheckLogin" maxlength="100" required disabled>
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>

                        </div>

                        <div class="form-group has-feedback">
                            <label for="InputPassword" class="add_asterisk">Пароль</label>
                            <input type="password" class="form-control" id="InputPassword" name="password" placeholder="Пароль" value="@Model.password" maxlength="100" required disabled>
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                        </div>
                        <div class="form-group has-feedback">
                            <label for="InputEmail" class="add_asterisk">Email</label>
                            <input type="email" class="form-control" id="InputEmail" name="email" placeholder="Enter email" value="@Model.email" maxlength="100" required disabled>
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                        </div>
                        <div class="form-group has-feedback">
                            <label for="InputFio" class="add_asterisk">ФИО</label>
                            <input type="text" class="form-control" id="InputFio" placeholder="ФИО" value="@Model.first_name" name="first_name" maxlength="100" required>
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                        </div>
                        <div class="form-group has-feedback">
                            <label for="address" class="add_asterisk">Город</label>
                            <input type="text" class="form-control" id="address" placeholder="Город" value="@Model.address" name="address" maxlength="100" required>
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                        </div>
                        <div class="form-group has-feedback">
                            <label for="phonenum" class="add_asterisk">Мобильный телефон</label>
                            <input type="tel" class="form-control phone" id="phonenum" placeholder="Mobile " value="@Model.mobile"  name="mobile" required>
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>

                        </div>
                        <div class="form-group">
                            <label for="InputSkype">Skype</label>
                            <input type="text" class="form-control" id="InputSkype" placeholder="Skype" value="@Model.skype" maxlength="100" name="skype">
                        </div>
                        

                    </div>

                </div>
            </div>
            <div class="modal-footer">
               
                <input type="submit" class="btn btn-primary loading-wait-btn" data-loading-text="Обработка..." value="Сохранить изменения">
                <script>
                    $('.loading-wait-btn')
    .click(function () {
        var btn = $(this)
        btn.button('loading')
        setTimeout(function () {
            btn.button('reset')
        }, 3000)
    });
                </script>
            </div>
        </form>
    </div>
</div>