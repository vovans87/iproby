@model iproby.Models.options
<div class="row" style="width:1100px;background-color:white; margin:0 auto;">
    <div style="width: 800px; margin: 0 auto;">
        <form role="form" action="/Cabinet/SaveOptions" method="post" data-toggle="validator" data-disable=false data-delay=100>
            <div class="modal-header">
                <h4 class="modal-title">Редактирование настроек</h4>
            </div>
            <div class="modal-body" id="result">
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-8">

                        <div class="checkbox">
                            <label>
                                @{
                                    if (@Model.send_email_from_clients == 1)
                                    {
                                        <input type="hidden" value="0" name="send_email_from_clients_flag" checked class="send_email_from_clients_flag" />
                                        <input type="checkbox" name="" onchange="if ($(this).is(':checked')) { $('.send_email_from_clients_flag').val(1) } else { $('.send_email_from_clients_flag').val(0) }" checked>
                                    }
                                    else
                                    {
                                        <input type="hidden" value="1" name="send_email_from_clients_flag" class="send_email_from_clients_flag" />
                                        <input type="checkbox" name="" onchange="if ($(this).is(':checked')) { $('.send_email_from_clients_flag').val(1) } else { $('.send_email_from_clients_flag').val(0) }">
                                    }
                                }
                                Получать информационную рассылку IPRO на email при появлении клиентов в моей специализации
                            </label>
                        </div>

                        <div class="checkbox">
                            <label>
                                @{
                                    if (@Model.status_vip_flag == 1)
                                    {
                                        <input type="hidden" value="1" name="status_vip_flag" checked class="status_vip_flag" />
                                        <input type="checkbox" name="" onchange="if ($(this).is(':checked')) { $('.status_vip_flag').val(1) } else { $('.status_vip_flag').val(0) }" checked>
                                    }
                                    else
                                    {
                                        <input type="hidden" value="0" name="status_vip_flag" class="status_vip_flag" />
                                        <input type="checkbox" name="" onchange="if ($(this).is(':checked')) { $('.status_vip_flag').val(1) } else { $('.status_vip_flag').val(0) }">
                                    }
                                }
                                Выделить объявление и поднять в ТОП на 20 дней (услуга платная стоимость: 1000 руб)
                            </label>
                        </div>




                    </div>
                </div>
            </div>
            <div class="modal-footer">

                <input type="submit" class="btn btn-primary loading-wait-btn" data-loading-text="Обработка..." value="Сохранить изменения">
                <script>
                    $('.loading-wait-btn')
    .click(function () {
        var btn = $(this)
        btn.button('loading')
        setTimeout(function () {
            btn.button('reset')
        }, 3000)
    });
                </script>
            </div>
        </form>
    </div>
</div>