@{
    ViewBag.Title = "Редактирование настроек";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section HeaderTop{
    @Html.Partial(Url.Content("~/Views/Home/HeaderTop.cshtml"))
}
@section SiteMap{
    @Html.Partial(Url.Content("~/Views/Announ/SiteMap.cshtml"))
}
@section EditOptions{

    @if (Session["login"] != null&&@Model.confirmed_flag==1)
    {
        @Html.Partial(Url.Content("~/Views/Cabinet/Options.cshtml"))
        if(ViewData["showPaymentDialog"] !=null&&ViewData["showPaymentDialog"]=="showPaymentDialog"){
            @Html.Partial(Url.Content("~/Views/Cabinet/showPaymentDialog.cshtml"))
        }
    }
    else if (Session["login"] != null && @Model.confirmed_flag != 1)
    {
        @Html.Partial(Url.Content("~/Views/Cabinet/NoEmailConfirm.cshtml"))
    }
    else 
    {
        @Html.Partial(Url.Content("~/Views/Cabinet/NoAuthorization.cshtml"))
    }
    <div class="row" style="height:55px;width:100%;">
    </div>
}
@section News{
    @{Html.RenderAction("Index", "News");}
}
@section Footer{
    @Html.Partial(Url.Content("~/Views/Home/Footer.cshtml"))
}
