@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section ButtonsHead{
    <div class="row" style="height: 140px; background-color: #e9e9e9; ">
        <div class="col-md-2"></div>
        <div class="col-md-4">
            <div style="width: 380px; height: 80px; background-color: #44b275; margin: 30px auto; -moz-border-radius: 40px; -webkit-border-radius: 40px; -khtml-border-radius: 40px; border-radius: 40px;display:table;">
                <div class="header_get_workers" style="display: table-cell; text-align: center; vertical-align: middle; font-family: Helvetica Bold; font-size: 20px;color:white;"><img src="~/Content/img/header_work_ico.png" style="padding-right:25px;" />Ищу работников</div>
            </div>
        </div>
        <div class="col-md-4">
            <div style=" width: 380px; height: 80px; background-color: #f5ab35; margin: 30px auto; -moz-border-radius: 40px; -webkit-border-radius: 40px; -khtml-border-radius: 40px; border-radius: 40px; display: table;">
                <div class="header_get_clients" style="display: table-cell; text-align: center; vertical-align: middle; font-family: Helvetica Bold; font-size: 20px; color: white;">
                    <img src="~/Content/img/header_job_ico.png" style="padding-right:25px;" />Ищу клиентов
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
}

@section AddRequest{
    <div class="row" style="background-color: #e9e9e9;height:200px;">
        <div style="width: 1100px; margin: 20px auto; font-family: Helvetica Bold; font-size: 18px;">
            РЕПЕТИТОРЫ
            <div style="width: 50px; height: 5px; background-color: #446cb3;"></div>
        </div>
        <div style="height: 120px; background-color: #f5e135;width:1100px;margin:40px auto;">
            <div style="font-family: Helvetica Bold; font-size: 18px; text-align: left; padding: 20px; float: left; width: 810px; ">
                <img src="~/Content/img/big_clock_ico.png" style="margin-top: -50px; float: left;padding-right:20px;" />
                Мало времени для поиска?
                <br>
                <span style="font-family: Helvetica; font-size: 16px; line-height: 2.5">
                    Разместите заявку и свободные репетиторы сами предложат вам свои услуги.
                </span>
            </div>
            <div style="height: 120px; float: left; width: 260px; display:table;">
                <div style="vertical-align: middle; display: table-cell;text-align:center;">
                    <div class="add_request" style="">
                        <img src="~/Content/img/edit_ico.png" />
                        Разместить заявку
                    </div>
                </div>
            </div>
        </div>
    </div>
}